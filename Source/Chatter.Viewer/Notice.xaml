<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="160"
        x:Class="Chatter.Viewer.Notice" Name="window" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
  <Grid>
    <Grid RowDefinitions="Auto 8 * Auto" Margin="14,0">
      <TextBlock Grid.Row="0" Text="{Binding #window.Title}" FontSize="24" />
      <TextBlock Grid.Row="2" Text="{Binding}" />
      <StackPanel Grid.Row="3" Margin="0,14" HorizontalAlignment="Right">
        <Button Name="button" Width="80" Content="OK" />
      </StackPanel>
    </Grid>
  </Grid>
</Window>
